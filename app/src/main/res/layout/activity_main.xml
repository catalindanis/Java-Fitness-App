<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/backButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="38dp"
        android:backgroundTint="@color/gray"
        android:text="Spate"
        app:layout_constraintBottom_toTopOf="@+id/chestButton"
        app:layout_constraintEnd_toEndOf="@+id/chestButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/chestButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/legsButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/gray"
        android:text="Picioare"
        app:layout_constraintBottom_toTopOf="@+id/shouldersButton"
        app:layout_constraintEnd_toEndOf="@+id/shouldersButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/shouldersButton"
        app:layout_constraintTop_toBottomOf="@+id/chestButton" />

    <Button
        android:id="@+id/shouldersButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/gray"
        android:text="Umeri"
        app:layout_constraintBottom_toTopOf="@+id/tricepsButton"
        app:layout_constraintEnd_toEndOf="@+id/tricepsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tricepsButton"
        app:layout_constraintTop_toBottomOf="@+id/legsButton" />

    <Button
        android:id="@+id/tricepsButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/gray"
        android:text="Triceps"
        app:layout_constraintBottom_toTopOf="@+id/bicepsButton"
        app:layout_constraintEnd_toEndOf="@+id/bicepsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/bicepsButton"
        app:layout_constraintTop_toBottomOf="@+id/shouldersButton" />

    <Button
        android:id="@+id/bicepsButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/gray"
        android:text="Biceps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tricepsButton" />

    <Button
        android:id="@+id/chestButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/gray"
        android:text="Piept"
        app:layout_constraintBottom_toTopOf="@+id/legsButton"
        app:layout_constraintEnd_toEndOf="@+id/legsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/legsButton"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

</androidx.constraintlayout.widget.ConstraintLayout>